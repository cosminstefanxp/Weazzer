<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mainMainLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/mainNextPeriodsLayout"
            android:layout_width="fill_parent"
            android:layout_height="74dp"
            android:animationCache="false" >

            <LinearLayout
                android:id="@+id/firstNextPeriodLayout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/RelativeLayout06"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/firstNextPeriodTitleLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="7:00"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/firstNextPeriodImageView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:src="@drawable/small_sunny" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout07"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/firstNextPeriodValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="5°C"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondNextPeriodLayout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/RelativeLayout04"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/secondNextPeriodTitleLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="13:00"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/secondNextPeriodImageView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.99"
                    android:src="@drawable/small_sunny" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout05"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/secondNextPeriodValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="5°C"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdNextPeriodLayout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/RelativeLayout02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/thirdNextPeriodTitleLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="19:00"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/thirdNextPeriodImageView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:src="@drawable/small_sunny" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout03"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/thirdNextPeriodValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="4°C"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourthNextPeriodLayout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/RelativeLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/fourthNextPeriodTitleLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="1:00"
                        android:textAppearance="?android:attr/textAppearanceSmall" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/fourthNextPeriodImageView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/small_sunny" />

                <RelativeLayout
                    android:id="@+id/positioningLayout2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/fourthNextPeriodValueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="12°C"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/to7DaysLayout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/to7DaysImage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:onClick="toLongTermAction"
                    android:src="@drawable/next" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/mainCenterLayout"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight="0.51" >

            <ImageView
                android:id="@+id/mainWeatherImageView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/feelsLikeLabel"
                android:src="@drawable/big_sunny" />

            <TextView
                android:id="@+id/locationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/textView1"
                android:text="locatie"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/mainTemperatureLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="19dp"
                android:text="5C"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/feelsLikeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/mainTemperatureLabel"
                android:layout_marginRight="5dp"
                android:text="5°C"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/feelsLikeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/feelsLikeLabel"
                android:layout_alignBottom="@+id/feelsLikeLabel"
                android:layout_toLeftOf="@+id/feelsLikeLabel"
                android:text="feels like "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_below="@+id/mainTemperatureLabel"
                android:layout_marginLeft="-8dp"
                android:layout_marginTop="23dp"
                android:onClick="onLeftArrowPress"
                android:src="@drawable/leftarrow" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="30dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageView1"
                android:layout_marginRight="-8dp"
                android:layout_weight="1.0"
                android:onClick="onRightArrowPress"
                android:src="@drawable/rightarrow" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mainClothesLayout"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight="0.30" >

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="99dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.78" >

                    <LinearLayout
                        android:id="@+id/topLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/upTopArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:onClick="onTopUpPress"
                            android:src="@drawable/uparrow" />

                        <ImageView
                            android:id="@+id/TopClothesView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:src="@drawable/umbrella" />

                        <ImageView
                            android:id="@+id/downTopArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:onClick="onTopDownPress"
                            android:src="@drawable/downarrow" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/BottomLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/bottomTopArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:onClick="onBottomUpPress"
                            android:src="@drawable/uparrow" />

                        <ImageView
                            android:id="@+id/BottomClothesView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:src="@drawable/umbrella" />

                        <ImageView
                            android:id="@+id/downBottomArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:onClick="onBottomDownPress"
                            android:src="@drawable/downarrow" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/OvercoatLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/overcoatTopArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:onClick="onOvercoatUpPress"
                            android:src="@drawable/uparrow" />

                        <ImageView
                            android:id="@+id/OvercoatClothesView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:src="@drawable/umbrella" />

                        <ImageView
                            android:id="@+id/downOvercoatArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:onClick="onOvercoatDownPress"
                            android:src="@drawable/downarrow" />

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/button1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.83"
                    android:background="#000000"
                    android:onClick="onSaveSuggestions"
                    android:text="Save my choice"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainExtraLayout"
                android:layout_width="78dp"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/firstRelative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0" >

                    <ImageView
                        android:id="@+id/firstExtraView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onFirstExtraToggle"
                        android:src="@drawable/umbrella" />

                    <ImageView
                        android:id="@+id/firstX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/x" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/secondRelative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0" >

                    <ImageView
                        android:id="@+id/secondExtraView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onSecondExtraToggle"
                        android:src="@drawable/umbrella" />

                    <ImageView
                        android:id="@+id/secondX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/x" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/thirdRelative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0" >

                    <ImageView
                        android:id="@+id/thirdExtraView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onThirdExtraToggle"
                        android:src="@drawable/umbrella" />

                    <ImageView
                        android:id="@+id/thirdX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/x" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>